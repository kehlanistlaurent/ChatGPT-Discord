# ======================================
# üîë Discord Bot Authentication
# ======================================
DISCORD_TOKEN=

# ======================================
# ü§ñ OpenAI API Key
# ======================================
OPENAI_API_KEY=

# ======================================
# üß† Bot Personality & Customization
# ======================================

# Multi-line persona: use \n for new lines or paste directly into the value
BOT_NAME=
BOT_PERSONA="Enter your bot persona here. I must be in quotations."

# Custom Discord status (appears under the bot name)
CUSTOM_STATUS=

# Owner details for recognition
OWNER_ID=
OWNER_USERNAME=


# ======================================
# üóÇ Memory Configuration
# ======================================
MEMORY_ENABLED=true             # true = bot remembers users, false = stateless

# ======================================
# üåê Web Search Configuration
# ======================================
WEB_SEARCH_ENABLED=false        # true = enable web search fallback

# DuckDuckGo API Key (optional)
DUCKDUCKGO_API_KEY=             # Leave blank for free DuckDuckGo searches

# Google Custom Search API Keys (optional)
GOOGLE_API_KEY=
GOOGLE_CSE_ID=                  				# Your Google Custom Search Engine ID

# ======================================
# üéû GIFs & Reactions Configuration
# ======================================
ENABLE_GIPHY=true
GIPHY_API_KEY=
ENABLE_REACTIONS=true

# ======================================
# üö® Escalation System
# ======================================
ESCALATION_ENABLED=false        # true = activate escalation system, false = off

# ======================================
# üóÉ Redis (Memory Store) Configuration
# ======================================
# Default: redis://redis:6379 (Docker default fallback)
REDIS_URL=redis://redis:6379

# ======================================
# üìù Logging
# ======================================
LOG_LEVEL=ERROR                 # ERROR = only log errors; INFO = verbose logs


