# ========================
# Discord Bot Configuration
# ========================
DISCORD_TOKEN=your_discord_bot_token_here
OWNER_ID=your_discord_user_id_here

# ========================
# OpenAI Configuration
# ========================
OPENAI_API_KEY=your_openai_api_key_here

# ========================
# Personality Configuration
# ========================
BOT_NAME=Your Bot Name Here
BOT_PERSONA="Paste your ChatGPT Custom Instructions or personality here."

OWNER_TONE="How the bot talks to you (e.g., warm, flirty)"
OTHERS_TONE="How the bot talks to others (e.g., polite, sarcastic)"

# ========================
# Memory Settings
# ========================
MEMORY_ENABLED=true           # true = remembers users, false = no memory
MEMORY_SCOPE=full             # full, owner-only, none
LOG_FULL_QA=false             # true = log every chat for admin review

# ========================
# Escalation System
# ========================
ESCALATION_ENABLED=false      # true = bot escalates tone with spam/flirt
SPAM_THRESHOLD=5              # messages in 30 seconds before escalation
GIF_THRESHOLD=3               # GIFs sent before escalation

# ========================
# Search Configuration (Optional)
# ========================
GOOGLE_API_KEY=
GOOGLE_CX=
DUCKDUCKGO_API_URL=https://api.duckduckgo.com/

# ========================
# GIFs and Reactions
# ========================
ENABLE_GIPHY=true
GIPHY_API_KEY=
ENABLE_REACTIONS=true

# ========================
# Debug Mode
# ========================
DEBUG_MODE=false

# ========================
# Redis Configuration
# ========================
# Leave blank to use Docker default: redis://redis:6379
REDIS_URL=

